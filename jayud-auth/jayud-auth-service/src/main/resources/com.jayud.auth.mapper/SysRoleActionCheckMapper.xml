<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.jayud.auth.mapper.SysRoleActionCheckMapper">

    <!-- 通用查询映射结果ss -->
    <resultMap id="BaseResultMap" type="com.jayud.auth.model.po.SysRoleActionCheck">
        <id column="id" property="id" />
        <result column="role_id" property="roleId" />
        <result column="action_id" property="actionId" />
        <result column="action_code" property="actionCode" />
        <result column="check_level" property="checkLevel" />
        <result column="check_money" property="checkMoney" />
        <result column="remark" property="remark" />
        <result column="crt_by" property="crtBy" />
        <result column="crt_by_name" property="crtByName" />
        <result column="crt_by_dtm" property="crtByDtm" />
        <result column="mdy_by" property="mdyBy" />
        <result column="mdy_by_name" property="mdyByName" />
        <result column="mdy_by_dtm" property="mdyByDtm" />
        <result column="is_deleted" property="isDeleted" />
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
            id, role_id, action_id, action_code, check_level, check_money, remark, crt_by, crt_by_name, crt_by_dtm, mdy_by, mdy_by_name, mdy_by_dtm, is_deleted
    </sql>

    <!-- 表名 -->
    <sql id="tname">sys_role_action_check </sql>

    <sql id="selects">
        SELECT <include refid="Base_Column_List"/>
        FROM <include refid="tname"/>
        <where>
            is_deleted = 0
            <if test="sysRoleActionCheck.roleId != null ">
                AND role_id = ${sysRoleActionCheck.roleId}
            </if>

            <if test="sysRoleActionCheck.actionId != null ">
                AND action_id = ${sysRoleActionCheck.actionId}
            </if>

            <if test="sysRoleActionCheck.actionCode != null and sysRoleActionCheck.actionCode != ''">
                AND action_code LIKE CONCAT('%',#{sysRoleActionCheck.actionCode},'%')
            </if>

            <if test="sysRoleActionCheck.checkLevel != null ">
                AND check_level = ${sysRoleActionCheck.checkLevel}
            </if>

            <if test="sysRoleActionCheck.checkMoney != null ">
                AND check_money = ${sysRoleActionCheck.checkMoney}
            </if>

            <if test="sysRoleActionCheck.remark != null and sysRoleActionCheck.remark != ''">
                AND remark LIKE CONCAT('%',#{sysRoleActionCheck.remark},'%')
            </if>

            <if test="sysRoleActionCheck.crtBy != null ">
                AND crt_by = ${sysRoleActionCheck.crtBy}
            </if>

            <if test="sysRoleActionCheck.crtByName != null and sysRoleActionCheck.crtByName != ''">
                AND crt_by_name LIKE CONCAT('%',#{sysRoleActionCheck.crtByName},'%')
            </if>

            <if test="sysRoleActionCheck.crtByDtm != null ">
                AND crt_by_dtm = ${sysRoleActionCheck.crtByDtm}
            </if>

            <if test="sysRoleActionCheck.mdyBy != null ">
                AND mdy_by = ${sysRoleActionCheck.mdyBy}
            </if>

            <if test="sysRoleActionCheck.mdyByName != null and sysRoleActionCheck.mdyByName != ''">
                AND mdy_by_name LIKE CONCAT('%',#{sysRoleActionCheck.mdyByName},'%')
            </if>

            <if test="sysRoleActionCheck.mdyByDtm != null ">
                AND mdy_by_dtm = ${sysRoleActionCheck.mdyByDtm}
            </if>

        </where>
    </sql>

    <select id="pageList" resultMap="BaseResultMap" parameterType="com.jayud.auth.model.po.SysRoleActionCheck">
        <include refid="selects"/>
    </select>

    <select id="list" resultMap="BaseResultMap" parameterType="com.jayud.auth.model.po.SysRoleActionCheck">
        <include refid="selects"/>
    </select>




    <delete id="phyDelById">
        DELETE FROM  sys_role_action_check WHERE id = ${id}
    </delete>

    <update id="logicDel">
        UPDATE sys_role_action_check SET is_deleted = 1 ,update_by = #{username}, update_time = now()
        WHERE id = ${id} AND is_deleted = 0
    </update>

    <select id="querySysRoleActionCheckForExcel" resultType="java.util.LinkedHashMap">
        SELECT
            id 'id',
            role_id 'roleId',
            action_id 'actionId',
            action_code 'actionCode',
            check_level 'checkLevel',
            check_money 'checkMoney',
            remark 'remark',
            crt_by 'crtBy',
            crt_by_name 'crtByName',
            crt_by_dtm 'crtByDtm',
            mdy_by 'mdyBy',
            mdy_by_name 'mdyByName',
            mdy_by_dtm 'mdyByDtm',
            is_deleted 'isDeleted'
        FROM sys_role_action_check
        WHERE is_deleted = 0
                    <if test="roleId != null ">
                        AND role_id = #{roleId}
                    </if>
                    <if test="actionId != null ">
                        AND action_id = #{actionId}
                    </if>
                    <if test="actionCode != null and actionCode != ''">
                        AND action_code LIKE CONCAT('%',#{actionCode}, '%')
                    </if>
                    <if test="checkLevel != null ">
                        AND check_level = #{checkLevel}
                    </if>
                    <if test="checkMoney != null ">
                        AND check_money = #{checkMoney}
                    </if>
                    <if test="remark != null and remark != ''">
                        AND remark LIKE CONCAT('%',#{remark}, '%')
                    </if>
                    <if test="crtBy != null ">
                        AND crt_by = #{crtBy}
                    </if>
                    <if test="crtByName != null and crtByName != ''">
                        AND crt_by_name LIKE CONCAT('%',#{crtByName}, '%')
                    </if>
                    <if test="crtByDtm != null ">
                        AND crt_by_dtm = #{crtByDtm}
                    </if>
                    <if test="mdyBy != null ">
                        AND mdy_by = #{mdyBy}
                    </if>
                    <if test="mdyByName != null and mdyByName != ''">
                        AND mdy_by_name LIKE CONCAT('%',#{mdyByName}, '%')
                    </if>
                    <if test="mdyByDtm != null ">
                        AND mdy_by_dtm = #{mdyByDtm}
                    </if>

    </select>

</mapper>
