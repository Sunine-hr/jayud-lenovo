<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.jayud.mall.mapper.ClearanceInfoCaseMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.jayud.mall.model.po.ClearanceInfoCase">
        <id column="id" property="id" />
        <result column="b_id" property="bId" />
        <result column="b_name" property="bName" />
        <result column="bill_id" property="billId" />
        <result column="bill_no" property="billNo" />
        <result column="case_id" property="caseId" />
        <result column="carton_no" property="cartonNo" />
        <result column="create_time" property="createTime" />
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id, b_id, b_name, bill_id, bill_no, case_id, carton_no, create_time
    </sql>
    <!--获取对应数据结合-->
    <select id="findClearanceInfoCaseByPage" resultType="com.jayud.mall.model.vo.ClearanceInfoCaseVO">
        select
        <include refid="Base_Column_List"/>
        from clearance_info_case
    </select>

    <!--插入用户-->
    <insert id="insertClearanceInfoCase" parameterType="com.jayud.mall.model.bo.ClearanceInfoCaseForm">
        INSERT INTO clearance_info_case (b_id, b_name, bill_id, bill_no, case_id,carton_no,create_time)
        VALUES (#{bId}, #{bName}, #{billId}, #{billNo}, #{caseId},1,#{cartonNo},now())
    </insert>

    <!--修改用户-->
    <update id="updateClearanceInfoCase" parameterType="com.jayud.mall.model.bo.ClearanceInfoCaseForm">
        UPDATE clearance_info_case
        SET
            b_id = #{bId},b_name = #{bName},bill_id = #{billId},
            bill_no = #{billNo},case_id = #{caseId},carton_no = #{cartonNo},create_time=now()
        where id = #{id}
    </update>

    <!--删除用户-->
    <delete id="deleteClearanceInfoCase" parameterType="Long">
        delete from clearance_info_case where id = #{id}
    </delete>
</mapper>
