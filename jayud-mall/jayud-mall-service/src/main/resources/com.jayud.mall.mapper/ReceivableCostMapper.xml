<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.jayud.mall.mapper.ReceivableCostMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.jayud.mall.model.po.ReceivableCost">
        <id column="id" property="id" />
        <result column="id_code" property="idCode" />
        <result column="cost_name" property="costName" />
        <result column="identifying" property="identifying" />
        <result column="status" property="status" />
        <result column="user_id" property="userId" />
        <result column="user_name" property="userName" />
        <result column="create_time" property="createTime" />
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id, id_code, cost_name, identifying, status, user_id, user_name, create_time
    </sql>

    <!--报价模板使用应付费用信息-->
    <select id="findReceivableCostBy" parameterType="com.jayud.mall.model.bo.ReceivableCostForm" resultType="com.jayud.mall.model.vo.ReceivableCostReturnVO">
        select
        t.cost_name
        from receivable_cost t where t.identifying=2;
    </select>

</mapper>
