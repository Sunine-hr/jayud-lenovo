<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.jayud.mall.mapper.SystemUserMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.jayud.mall.model.po.SystemUser">
        <id column="id" property="id"/>
        <result column="name" property="name"/>
        <result column="password" property="password"/>
        <result column="user_name" property="userName"/>
        <result column="en_user_name" property="enUserName"/>
        <result column="phone" property="phone"/>
        <result column="email" property="email"/>
        <result column="is_department_charge" property="isDepartmentCharge"/>
        <result column="department_id" property="departmentId"/>
        <result column="work_id" property="workId"/>
        <result column="work_name" property="workName"/>
        <result column="company_id" property="companyId"/>
        <result column="superior_id" property="superiorId"/>
        <result column="login_time" property="loginTime"/>
        <result column="status" property="status"/>
        <result column="audit_status" property="auditStatus"/>
        <result column="user_type" property="userType"/>
        <result column="note" property="note"/>
        <result column="created_user" property="createdUser"/>
        <result column="created_time" property="createdTime"/>
        <result column="updated_time" property="updatedTime"/>
        <result column="updated_user" property="updatedUser"/>
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id, `name`, password, user_name, en_user_name, phone, email, is_department_charge, department_id, work_id, work_name, company_id, superior_id, login_time, status, audit_status, user_type, note, created_user, created_time, updated_time, updated_user
    </sql>

    <!--查询登录用户-->
    <select id="findSystemUserByLoginname" resultType="com.jayud.mall.model.vo.SystemUserVO">
        SELECT
        <include refid="Base_Column_List"/>
        FROM system_user
        WHERE status = 1
        AND phone=#{loginname} OR email=#{loginname}
    </select>

    <!--获取所有用户-->
    <select id="getUserList" resultType="com.jayud.mall.model.vo.SystemUserVO">
        select
        <include refid="Base_Column_List"/>
        from system_user
    </select>

    <!--插入用户-->
    <insert id="insertUser" parameterType="com.jayud.mall.model.bo.SaveUserForm">
        INSERT INTO system_user (user_name, company_id, en_user_name, phone, email)
        VALUES (#{userName}, #{companyId}, #{enUserName}, #{phone}, #{email})
    </insert>

    <!--修改用户-->
    <update id="updateUser" parameterType="com.jayud.mall.model.bo.SaveUserForm">
        UPDATE system_user
        SET
            user_name = #{userName},
            company_id = #{companyId},
            en_user_name = #{enUserName},
            phone = #{phone},
            email = #{email}
        where id = #{id}
    </update>

    <!--删除用户-->
    <delete id="deleteUser" parameterType="Long">
        delete from system_user where id = #{id}
    </delete>

    <!--根据用户Id查询用户-->
    <select id="getUser" parameterType="Long" resultType="com.jayud.mall.model.vo.SystemUserVO">
        select
        <include refid="Base_Column_List"/>
        from system_user where id = #{id}
    </select>

    <!--禁用用户-->
    <update id="disableUser" parameterType="Long">
        UPDATE system_user
        SET
            status = 0
        where id = #{id}
    </update>

    <!--启用用户-->
    <update id="enableUser" parameterType="Long">
        UPDATE system_user
        SET
            status = 1
        where id = #{id}
    </update>

    <!--重置密码-->
    <update id="resetPassword" parameterType="com.jayud.mall.model.bo.ResetUserPwdForm">
        UPDATE system_user
        SET
            password = #{password}
        where id = #{id}
    </update>

    <!--查询用户分页-->
    <select id="findUserByPage" parameterType="com.jayud.mall.model.bo.QueryUserForm"
            resultType="com.jayud.mall.model.vo.SystemUserVO" >
        SELECT
            su.id,
            su.`name`,
            su.`password`,
            su.user_name,
            su.en_user_name,
            su.phone,
            su.email,
            su.is_department_charge,
            su.department_id,
            su.work_id,
            su.work_name,
            su.company_id,
            su.superior_id,
            su.login_time,
            su.`status`,
            su.audit_status,
            su.user_type,
            su.note,
            su.created_user,
            su.created_time,
            su.updated_time,
            su.updated_user
        FROM
            system_user su
        WHERE
            1 = 1
        <if test="form.userName != null and form.userName != ''">
            AND su.user_name LIKE concat('%',#{form.userName},'%')
        </if>
        <if test="form.status != null and form.status != ''">
            AND su.`status` = #{form.status}
        </if>
        GROUP BY
            su.`id`
    </select>


</mapper>
