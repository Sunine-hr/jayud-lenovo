<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.jayud.mall.mapper.SystemUserMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.jayud.mall.model.po.SystemUser">
        <id column="id" property="id" />
        <result column="name" property="name" />
        <result column="password" property="password" />
        <result column="user_name" property="userName" />
        <result column="en_user_name" property="enUserName" />
        <result column="phone" property="phone" />
        <result column="email" property="email" />
        <result column="is_department_charge" property="isDepartmentCharge" />
        <result column="department_id" property="departmentId" />
        <result column="work_id" property="workId" />
        <result column="work_name" property="workName" />
        <result column="company_id" property="companyId" />
        <result column="superior_id" property="superiorId" />
        <result column="login_time" property="loginTime" />
        <result column="status" property="status" />
        <result column="audit_status" property="auditStatus" />
        <result column="user_type" property="userType" />
        <result column="note" property="note" />
        <result column="created_user" property="createdUser" />
        <result column="created_time" property="createdTime" />
        <result column="updated_time" property="updatedTime" />
        <result column="updated_user" property="updatedUser" />
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id, name, password, user_name, en_user_name, phone, email, is_department_charge, department_id, work_id, work_name, company_id, superior_id, login_time, status, audit_status, user_type, note, created_user, created_time, updated_time, updated_user
    </sql>

    <select id="findSystemUserByLoginname" resultType="com.jayud.mall.model.vo.SystemUserVO">
        SELECT
        <include refid="Base_Column_List"/>
        FROM system_user
        WHERE status = 1
        AND phone=#{loginname} OR email=#{loginname}
    </select>

</mapper>
