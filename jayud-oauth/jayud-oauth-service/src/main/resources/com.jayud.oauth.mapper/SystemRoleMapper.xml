<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.jayud.oauth.mapper.SystemRoleMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.jayud.model.po.SystemRole">
        <id column="id" property="id" />
        <result column="name" property="name" />
        <result column="description" property="description" />
        <result column="admin_count" property="adminCount" />
        <result column="create_time" property="createTime" />
        <result column="status" property="status" />
        <result column="sort" property="sort" />
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        system_role.id,
        system_role.name,
        system_role.description,
        system_role.admin_count,
        system_role.create_time,
        system_role.status,
        system_role.sort
    </sql>
    <select id="getRoleList" resultType="com.jayud.model.po.SystemRole">
        select
            <include refid="Base_Column_List"/>
        from
            system_role
        left join system_user_role_relation surr on system_role.id =  surr.role_id
        where
            surr.user_id = #{userId}
    </select>

    <insert id="saveRole" parameterType="com.jayud.model.po.SystemRole" useGeneratedKeys="true" keyProperty="id">
	insert into system_role
	   (name,description,admin_count,sort)
	values (
		#{name},
		#{description},
		#{adminCount},
		#{sort})
  </insert>

    <select id="findRoleByPage" parameterType="com.jayud.model.bo.QueryRoleForm" resultType="com.jayud.model.vo.SystemRoleView" >
        SELECT
        sr.`id`,
        sr.`name`,
        sr.`description`,
        GROUP_CONCAT(DISTINCT su.`name` SEPARATOR ',') roleUser
        FROM
        system_role sr
        LEFT JOIN system_user_role_relation surr
        ON surr.`role_id` = sr.`id`
        LEFT JOIN `system_user` su
        ON su.`id` = surr.`user_id`
        WHERE 1 = 1
           <if test="form.name != null and form.name != ''">
               and sr.name like concat('%',#{form.name},'%')
           </if>
        GROUP BY sr.`id`,
        sr.`name`,
        sr.`description`
    </select>

    <select id="getRoleByCondition" resultType="com.jayud.model.po.SystemRole"  parameterType="java.util.Map">
        select
        <include refid="Base_Column_List"/>
        from
        system_role
        where 1 = 1
        <if test="key != null and key != ''">
            and `key` = #{key}
        </if>
        <if test="id != null">
            and `id` = #{id}
        </if>
    </select>
</mapper>
