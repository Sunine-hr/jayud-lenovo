<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.jayud.oms.mapper.CurrencyInfoMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.jayud.oms.model.po.CurrencyInfo">
        <id column="id" property="id" />
        <result column="currency_code" property="currencyCode" />
        <result column="currency_name" property="currencyName" />
        <result column="country_code" property="countryCode" />
        <result column="status" property="status" />
        <result column="user_id" property="userId" />
        <result column="user_name" property="userName" />
        <result column="create_time" property="createTime" />
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id, currency_code, currency_name, country_code, status, user_id, user_name, create_time
    </sql>

    <select id="findCurrencyInfo"  resultType="com.jayud.oms.model.vo.CurrencyInfoVO" >
        SELECT
          ci.`currency_name` currencyCode,
          ci.`currency_code` currencyName,
          cr.`exchange_rate` exchangeRate
        FROM
          currency_info ci
          LEFT JOIN currency_rate cr
            ON ci.`id` = cr.`ocid`
            AND cr.`status` = 1
        WHERE ci.`status` = 1
    </select>

</mapper>
