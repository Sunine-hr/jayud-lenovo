<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.jayud.oms.mapper.CustomerInfoMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.jayud.model.po.CustomerInfo">
        <id column="id" property="id" />
        <result column="name" property="name" />
        <result column="unit_account" property="unitAccount" />
        <result column="unit_code" property="unitCode" />
        <result column="id_code" property="idCode" />
        <result column="types" property="types" />
        <result column="contact" property="contact" />
        <result column="phone" property="phone" />
        <result column="address" property="address" />
        <result column="email" property="email" />
        <result column="legal_entity" property="legalEntity" />
        <result column="invoice_code" property="invoiceCode"/>
        <result column="tfn" property="tfn"/>
        <result column="if_contract" property="ifContract"/>
        <result column="settlement_type" property="settlementType"/>
        <result column="account_period" property="accountPeriod"/>
        <result column="estate" property="estate"/>
        <result column="department_code" property="departmentCode"/>
        <result column="ku_code" property="kuCode"/>
        <result column="yw_code" property="ywCode"/>
        <result column="audit_status" property="auditStatus"/>
        <result column="created_user" property="createdUser"/>
        <result column="updated_user" property="updatedUser"/>
        <result column="updated_time" property="updatedTime"/>
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
         id,name,unit_account,unit_code,id_code,types,contact,phone,address,email,legal_entity,invoice_code,tfn,
         if_contract,settlement_type,account_period,estate,department_code,ku_code,yw_code,audit_status,
         created_user,updated_user
    </sql>

    <select id="findCustomerInfoByPage" parameterType="com.jayud.model.bo.QueryCustomerInfoForm" resultType="com.jayud.model.vo.CustomerInfoVO" >
        SELECT
          ci.id,
          ci.name,
          ci.`unit_account` unitAccount,
          ci.`unit_code` unitCode,
          ci.`id_code` idCode,
          ci.`types`,
          ci.`contact`,
          ci.`phone`,
          ci.`address`,
          ci.`email`,
          ci.`legal_entity` legalEntity,
          ci.`invoice_code` invoiceCode,
          ci.`tfn`,
          ci.`if_contract` ifContract,
          ci.`settlement_type` settlementType,
          ci.`account_period` accountPeriod,
          ci.`estate`,
          ci.`department_id` departmentId,
          d.`name` departmentName,
          ci.`ku_id` kuId,
          su1.`user_name` kuName,
          ci.`yw_id` ywId,
          su2.`user_name` ywName,
          ci.`audit_status` auditStatus,
          (
            CASE
              ci.`audit_status`
              WHEN '0'
              THEN '待审核'
              WHEN '1'
              THEN '待客服审核'
              WHEN '2'
              THEN '待财务审'
              WHEN '3'
              THEN '待总经办审核'
              WHEN '10'
              THEN '通过'
              WHEN '11'
              THEN '审核拒绝'
            END
          ) auditStatusDesc,
          ci.`created_user` createdUser,
          DATE_FORMAT(
            ci.`created_time`,
            '%Y-%m-%d %H %I %S'
          ) createdTimeStr,
          ci.`updated_user` updatedTimeStr,
          ci.`audit_comment` auditComment,
          DATE_FORMAT(
            ci.`updated_time`,
            '%Y-%m-%d %H %I %S'
          ) updatedTimeStr
        FROM
          customer_info ci
          LEFT JOIN department d
            ON ci.`department_id` = d.`id`
          LEFT JOIN `system_user` su1
            ON su1.`id` = ci.`ku_id`
          LEFT JOIN `system_user` su2
            ON su2.`id` = ci.`yw_id` where 1 = 1
        <if test="form.name != null and form.name != ''">
            and ci.name like concat('%',#{form.name},'%')
        </if>
        <if test="form.id != null">
            and ci.id = #{form.id}
        </if>
    </select>



</mapper>
