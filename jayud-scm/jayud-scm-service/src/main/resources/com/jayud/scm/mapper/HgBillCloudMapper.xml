<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.jayud.scm.mapper.HgBillCloudMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.jayud.scm.model.po.HgBillCloud">
        <id column="id" property="id" />
        <result column="bill_id" property="billId" />
        <result column="s_type" property="sType" />
        <result column="follow_context" property="followContext" />
        <result column="remark" property="remark" />
        <result column="is_onl" property="isOnl" />
        <result column="crt_by" property="crtBy" />
        <result column="crt_by_name" property="crtByName" />
        <result column="crt_by_dtm" property="crtByDtm" />
        <result column="mdy_by" property="mdyBy" />
        <result column="mdy_by_name" property="mdyByName" />
        <result column="mdy_by_dtm" property="mdyByDtm" />
        <result column="voided" property="voided" />
        <result column="voided_by" property="voidedBy" />
        <result column="voided_by_name" property="voidedByName" />
        <result column="voided_by_dtm" property="voidedByDtm" />
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id, bill_id, s_type, follow_context, remark, is_onl, crt_by, crt_by_name, crt_by_dtm, mdy_by, mdy_by_name, mdy_by_dtm, voided, voided_by, voided_by_name, voided_by_dtm
    </sql>

    <select id="findByPage" resultType="com.jayud.scm.model.vo.HgBillCloudVO">
        select id, bill_id billId, s_type sType, follow_context followContext, remark, crt_by_name crtByName, crt_by_dtm crtByDtm
        from hg_bill_cloud hbc where hbc.voided = 0 and hbc.bill_id = #{form.id}
    </select>

</mapper>
